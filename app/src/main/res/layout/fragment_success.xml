<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.main.home.choice.success.SuccessFragment" >

    <TextView
        style="@style/montserrat.31black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks You"/>

    <TextView
        style="@style/montserrat.11grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Terimakasih telah membeli tiket\nmenggunakan BusTravel"/>

    <ImageView
        android:layout_marginTop="64dp"
        android:src="@drawable/ic_success"
        android:layout_width="match_parent"
        android:layout_height="166dp"/>

    <com.google.android.material.button.MaterialButton
        style="@style/Button.18white"
        android:id="@+id/btn_success"
        android:text="Lihat tiket"
        android:textAllCaps="false"
        android:layout_marginTop="58dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/sp_rectangle_radius_20_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backgroundTint="@null"/>
</LinearLayout>